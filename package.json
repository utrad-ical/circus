{
  "name": "root",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/utrad-ical/circus.git"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=7.14.0"
  },
  "workspaces": {
    "packages": [
      "./packages/*"
    ]
  },
  "scripts": {
    "test": "jest",
    "lint": "eslint \"packages/*/{src,test}/**/*.{js,ts,tsx}\"",
    "lint-fix": "eslint --fix \"packages/*/{src,test}/**/*.{js,ts,tsx}\"",
    "prettier": "prettier --write \"packages/*/{src,test}/**/*.{js,ts,less,json,yaml,yml}\"",
    "build-ts": "tsc -b"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@types/jest": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "babel-jest": "^26.0.1",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.9.0",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "jest": "^26.0.1",
    "lerna": "^3.20.2",
    "prettier": "^2.0.5",
    "typescript": "^3.9.3"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "jest": {
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!@utrad-ical/circus-(rs|cs-core|lib)/src)"
    ],
    "setupFiles": [
      "dotenv/config"
    ],
    "testEnvironment": "node",
    "testTimeout": 10000
  }
}
