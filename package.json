{
  "name": "root",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/utrad-ical/circus.git"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=7.14.0"
  },
  "workspaces": {
    "packages": [
      "./packages/*"
    ]
  },
  "scripts": {
    "test": "jest",
    "build": "npm run build --if-present --workspaces",
    "lint": "eslint \"packages/*/{src,test}/**/*.{js,ts,tsx}\"",
    "lint-fix": "eslint --fix \"packages/*/{src,test}/**/*.{js,ts,tsx}\"",
    "lint-prettier": "prettier --check \"packages/*/{src,test}/**/*.{js,ts,less,json,yaml,yml}\"",
    "prettier": "prettier --write \"packages/*/{src,test}/**/*.{js,ts,less,json,yaml,yml}\"",
    "prebuild-ts": "cd packages/circus-rs && npm run prebuild",
    "build-ts": "tsc -b",
    "postbuild-ts": "cd packages/circus-rs && npm run postbuild",
    "typecheck": "npm run typecheck:circus-api && npm run typecheck:circus-cs-core && npm run typecheck:circus-icons && npm run typecheck:circus-lib && npm run typecheck:circus-rs && npm run typecheck:circus-ui-kit && npm run typecheck:circus-web-ui && npm run typecheck:create-circus-cad-plugin",
    "typecheck:circus-api": "cd packages/circus-api && tsc --noEmit",
    "typecheck:circus-cs-core": "cd packages/circus-cs-core && tsc --noEmit",
    "typecheck:circus-icons": "cd packages/circus-icons && tsc --noEmit",
    "typecheck:circus-lib": "cd packages/circus-lib && tsc --noEmit",
    "typecheck:circus-rs": "cd packages/circus-rs && tsc --noEmit",
    "typecheck:circus-ui-kit": "cd packages/circus-ui-kit && tsc --noEmit",
    "typecheck:circus-web-ui": "cd packages/circus-web-ui && tsc --noEmit",
    "typecheck:create-circus-cad-plugin": "cd packages/create-circus-cad-plugin && tsc --noEmit"
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "babel-jest": "^26.0.1",
    "dotenv": "^16.0.3",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.9.0",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "jest": "^26.0.1",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "jest": {
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!@utrad-ical/circus-(rs|cs-core|lib)/src)"
    ],
    "setupFiles": [
      "dotenv/config"
    ],
    "testEnvironment": "node",
    "testTimeout": 10000
  }
}
