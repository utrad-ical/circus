{
	"name": "ical/circus_db",
	"description": "CIRCUS DB",
	"keywords": ["computer-assisted detection", "CAD", "DICOM"],
	"license": "BSD-2-Clause",
	"type": "project",
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/utrad-ical/circus-rs.git"
		}
	],
	"require": {
		"laravel/framework": "4.2.*",
		"jenssegers/mongodb": "~2.0",
		"utrad-ical/circus-rs": "0.*"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		],
		"psr-4": {
			"\\": "app/lib"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize",
			"php artisan build-rs"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize",
			"php artisan build-rs"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "stable",
	"require-dev": {
		"phpunit/phpunit": "~4.7"
	}
}
