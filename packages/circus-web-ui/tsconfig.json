{
  "extends": "../../tsconfig.settings.json",
  "compilerOptions": {
    "lib": ["dom", "es2019"],
    "jsx": "react",
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "./lib",
    // This package is top-level and not referenced by others,
    // so we set the following two options
    "composite": false,
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts"],
  "references": [
    { "path": "../circus-lib" },
    { "path": "../circus-rs" },
    { "path": "../circus-ui-kit" }
  ]
}
