{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "composite": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    // The following settings will map '@utrad-ical/foo'
    // to './packages/foo/src'.
    "paths": {
      "@utrad-ical/*": ["../../*/src"]
    }
  }
}
